{
  "name": "domic",
  "version": "1.0.0-alpha1",
  "repository": "https://github.com/ceymard/carbyne",
  "description": "some description",
  "license": "MIT",
  "main": "./lib/domic.js",
  "typings": "./lib/domic.d.ts",
  "scripts": {
    "build:dts": "dts-bundle --name domic --main build/index.d.ts --out ../lib/domic.d.ts && sed -i 's/^global/declare global/' ./lib/domic.d.ts",
    "build:js": "tsc",
    "build": "npm run build:js && npm run build:dts",
    "watch": "parallel -u ::: 'ls src/*.d.ts | entr -d npm run build:dts' 'tscc -w'"
  },
  "devDependencies": {
    "dts-bundle": "^0.5.0"
  }
}
